<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Activity.ProfileActivity">

    <TextView
        android:id="@+id/txtProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- User Avatar/Icon -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_bg_light_grey"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtProfileTitle"
        app:srcCompat="@drawable/btn_4"
        app:tint="@color/green" />

    <!-- User Email Display -->
    <TextView
        android:id="@+id/txtUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="user@example.com"
        android:textColor="@color/darkGrey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProfile" />

    <!-- Options Section -->
    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txtUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOrderHistory"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order History"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="16dp"
            android:drawableTint="@color/darkGrey"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="56dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/lightGrey" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSettings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="16dp"
            android:drawableTint="@color/darkGrey"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="56dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/lightGrey" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHelp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:drawableStart="@drawable/ic_help"
            android:drawablePadding="16dp"
            android:drawableTint="@color/darkGrey"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="56dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>
    <!-- Logout Button (The primary action) -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/green"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/optionsContainer"
        app:layout_constraintStart_toStartOf="@id/optionsContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>